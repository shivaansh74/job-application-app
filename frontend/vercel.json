{
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "framework": "create-react-app",
  "env": {
    "REACT_APP_API_URL": "https://job-application-app-y28m.onrender.com"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://job-application-app-y28m.onrender.com/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 